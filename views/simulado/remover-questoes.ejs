<!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <!--========== BOX ICONS ==========-->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css">
        <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
        <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
        <!--========== CSS ==========-->
       
    
        <link rel="stylesheet" href="/css/minhasquestoes.css">
        <link rel="stylesheet" href="/css/uikit.min.css" />
        <script src="/js/uikit.min.js"></script>
        <script src="/js/uikit-icons.min.js"></script>
                    <style>
                            body {
        font-family: Arial, sans-serif;
        width:100%;
        height: 100%;
    }

    main {
        margin: 20px;
    }

    h1 {
        color: #333;
        margin-bottom: 20px;
        font-size: 24px;
        /* Aumenta o tamanho do título */
        font-weight: bold;
        /* Torna o título em negrito */
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    th,
    td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: center;
    }

    th {
        background-color: #f2f2f2;
    }

    /* Estilos gerais para todos os botões */
    .button-container {
        display: flex;
        /* Usa flexbox para alinhar os botões lado a lado */
        gap: 10px;
        /* Espaçamento entre os botões */
        justify-content: center;
        /* Centraliza os botões horizontalmente */
        padding: 10px;
        /* Padding ao redor do contêiner para dar espaço */
        /* Fundo claro para o contêiner */
        /* Sombra suave para dar profundidade */
    }

    .button {
        display: flex;
        align-items: center;
        gap: 5px;
        padding: 8px 12px;
        border-radius: 5px;
        border: 1px solid black;
        color: black;
        cursor: pointer;

    }

    .uk-heading-divider {
        text-align: center;
    }

    .uk-search-input {
        border: 1px solid black;
    }

  
    form input[type="text"] {
        padding: 10px;
        margin-right: 10px;
        border-radius: 5px;
        border: 1px solid #ccc;
    }
    form button{
        padding: 10px;
        margin-right: 10px;
        border-radius: 5px;
        border: 1px solid black;
        background-color: white;
        color: black;
    }
                    </style>  
        <title>Responsive sidebar submenus</title>
    </head>
    <body>
        <%- include('../partials/sidebar') %>
        <!--========== CONTENTS ==========-->
        <main>
            <% if (typeof errorMessage !== 'undefined' && errorMessage.trim()) { %>
                <script>
                    window.onload = function() {
                        alert("<%= errorMessage %>");
                    };
                </script>
            <% } %>

                <h1 class="uk-heading-divider">REMOVER QUESTÕES</h1>
               

                <form action="/usuario/simulados/<%= simulado.id %>/remover-questoes" method="GET">
                    <!-- Campo de filtragem por título -->
                    <input type="text" name="titulo" placeholder="Filtrar por título">
                    <button type="submit"><i class='bx bx-search'></i>Pesquisar</button>
                </form>



            <form action="/usuario/Simulados/<%= simulado.id %>/remover-questoes?_method=DELETE" method="POST">
                <table class="table-container">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Título</th>
                            <th>Tipo</th>
                            <th>Questão</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% questoes.forEach(questao => { %>
                            <tr>
                                <td>
                                    <input type="checkbox" id="questao-<%= questao.id %>" name="questoesSelecionadas" value="<%= questao.id %>">
                                </td>
                                <td><%= questao.titulo %></td>
                                <td>
                                    <%= questao.tipo %>
                                </td>
                                <td>
                                    <div class="name" data-delta='<%= questao.pergunta %>'>
                                        <!-- O conteúdo será inserido via JavaScript -->
                                        <span class="required">*</span>
                                    </div>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                   
                </table>
                <div class="pagination-container">
                    <% if (page > 1) { %>
                        <a href="?page=<%= page - 1 %>">Anterior</a>
                    <% } %>
                    <% for (let i = 1; i <= totalPages; i++) { %>
                        <a href="?page=<%= i %>" class="<%= page === i ? 'active' : '' %>"><%= i %></a>
                    <% } %>
                    <% if (page < totalPages) { %>
                        <a href="?page=<%= page + 1 %>">Próximo</a>
                    <% } %>
                </div>
                <input type="hidden" name="simuladoId" value="<%= simulado.id %>">
                <button type="submit">Remover Questões</button>
            </form>
            
    
    
        </main>

        <!--========== MAIN JS ==========-->


</script>
        <script src="/js/main.js"></script>
        <script src="/js/editarsimulado.js"></script>
        <script src="/js/quillContentHtmlTable.js"></script>
    </body>
</html>