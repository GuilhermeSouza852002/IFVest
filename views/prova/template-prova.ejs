<!DOCTYPE html>
<html lang="en">

<head>
    <title>Tamplete gerarPDF</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Adicione aqui os links para os estilos CSS necessários -->
    <script type="text/javascript" id="MathJax-script" defer
        src="https://cdn.jsdelivr.net/npm/mathjax@3/es5/tex-svg.js">
        </script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css">

    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
    <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.9.3/html2pdf.bundle.min.js"></script>

    <script src="/js/gerarPDF.js"></script>

    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 2rem;
            background-color: #f5f5f5;
        }
    
        main {
            max-width: 900px;
            margin: auto;
            background: #fff;
            padding: 2rem;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            overflow-wrap: break-word;
            word-wrap: break-word;
        }
        
    
        .title-div h1 {
            font-size: 40px;
            text-align: center;
            color: #333;
        }
    
        /* Organização das questões em duas colunas */
        .questoes-container {
            display: grid;
            grid-template-columns: 1fr 1fr; /* Mantém duas colunas */
            gap: 1.5rem; /* Reduz o espaçamento entre as colunas */
        }

    
        /* Ajuste das margens para compactar */
        .name-div {
            margin-bottom: 1rem; /* Reduz o espaçamento inferior */
            padding-bottom: 0.5rem;
            border-bottom: 1px solid #ccc;
        }

    
        /* Justificação do texto nas perguntas */
        .titulo p {
            text-align: justify;
        }


        .name {
            font-size: 12px;
            text-align: justify; /* Justificar o texto */
        }
    
        /* Ajuste no layout das opções */
        .opcao {
            display: flex;
            align-items: center;
            margin-bottom: 0.8rem; /* Reduz espaço entre as opções */
            text-align: justify;
        }

        .letra {
            font-weight: bold;
            margin-right: 8px;
            font-size: 12px; /* Reduz o tamanho das letras das opções */
        }

        .radio-input {
            margin-right: 8px; /* Reduz o espaço entre o rádio e o texto */
        }

    
        .opcao-texto {
            font-size: 12px;
            color: #333;
            text-align: justify;
        }
        
        /* Ajuste no textarea */
        textarea {
            width: 100%;
            height: 100px; /* Diminui a altura para caber mais conteúdo */
            margin-top: 0.5rem;
            padding: 8px;
            font-size: 1rem;
            border: 1px solid #ccc;
            border-radius: 5px;
            text-align: justify;
        }
        
    
        /* Ajuste nos botões */
        .button1, .button2 {
            width: 50%;
            padding: 8px; /* Reduz o padding para compactar */
            font-size: 1rem; /* Reduz o tamanho do texto dos botões */
            border-radius: 5px;
            cursor: pointer;
            margin-left: auto;
            margin-right: auto;
            display: block;
            margin-top: 20px;
        }

        .button1:hover {
            background-color: #45a049;
        }
        .button2:hover {
            background-color: #ff0000;
        }

        /* Imagens ajustadas para o tamanho do contêiner */
        img {
            max-width: 100%; /* Garante que a imagem não ultrapasse o limite */
            height: auto;
        }

    </style>
    </head>
    
    <body>
        <main>
            <button class="button1" id="generate-pdf">Gerar PDF</button>
            <button class="button2" onclick="fecharModal()">Fechar</button>

            <div class="title-div">
                <h1>Teste de questões <%= simulado.tipo %></h1>
            </div>
    
            <form id="questionario" class="form" action="/usuario/simulados/responder-prova/<%= simulado.id %>" method="POST">
                <div class="questoes-container">
                    <% simulado.Questões.forEach(questao=> { %>
                    <div class="name-div">
                        <div class="titulo">
                            <p>
                                <%= questao.titulo %>
                                <% if (questao.vestibular && questao.vestibular.nome && questao.vestibular.ano) { %>
                                (<%= questao.vestibular.nome %> <%= questao.vestibular.ano %>)
                                <% } %>
                            </p>
                        </div>
    
                        <div class="name" data-delta='<%= questao.pergunta %>'>
                            <!-- O conteúdo será inserido via JavaScript -->
                            <span class="required">*</span>
                        </div>
    
                        <% if (questao.tipo==="OBJETIVA" ) { %>
                        <% const letras=['a', 'b' , 'c' , 'd' , 'e' , 'f' , 'g' , 'h' , 'i' , 'j' ]; %>
                        <% questao.Opcoes.forEach((opcao, index)=> { %>
                        <div class="opcao">
                            <label class="letra" for="opcao<%= opcao.id %>"><%= letras[index] %>)</label>
                            <input class="radio-input" type="radio" id="opcao<%= opcao.id %>" name="questoes[<%= questao.id %>]" value="<%= questao.id %>-<%= opcao.id %>">
                            <% if (opcao.descricao.includes('/uploads')) { %>
                            <img src="<%= opcao.descricao %>" alt="Descrição da opção <%= index + 1 %>" width="150" height="200">
                            <% } else { %>
                            <label class="opcao-texto" for="opcao<%= opcao.id %>"><%= opcao.descricao %></label>
                            <% } %>
                        </div>
                        <% }) %>
                        <% } else if (questao.tipo==="DISSERTATIVA" ) { %>
                        <textarea name="respostas[questao_<%= questao.id %>]" placeholder="Sua resposta"></textarea>
                        <% } %>
                    </div>
                    <% }) %>
                </div>
            </form>
    
            <!-- <button class="button" id="generate-pdf">Imprimir</button>
            <button onclick="fecharModal()">Fechar</button> -->
        </main>
    
        <!-- Adicione aqui os scripts JS necessários -->
        <script src="/js/main.js"></script>
        <script src="/js/quillContentHTML.js"></script>
        <script>
            function fecharModal() {
                parent.document.getElementById('modal-imprimir').style.display = 'none';
            }
            </script>
    </body>
    
    

</html>